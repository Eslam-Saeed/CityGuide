<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".restaurants.details.GradientActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/view_toolbar" />

        <TextView
            android:id="@+id/txtDishName"
            android:layout_marginTop="@dimen/margin_medium"
            style="@style/FontSemiBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/margin_medium"
            android:textColor="@color/fontColor"
            android:textSize="@dimen/font_xlarge" />

        <ImageView
            android:id="@+id/imgRecipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:scaleType="centerInside"
            android:elevation="@dimen/padding_xSmall"
            android:src="@drawable/default_image" />

        <TextView
            android:id="@+id/txtGradientDescription"
            style="@style/FontSemiLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:lineSpacingExtra="0.6dp"
            android:padding="@dimen/margin_medium"
            android:textColor="@color/fontColor"
            android:textSize="@dimen/font_medium" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>